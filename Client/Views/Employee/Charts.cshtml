@model API.DTOs.Employees.ChartEmployeeDto

@if (TempData["Success"] != null)
{
    <script>
        Swal.fire({
            title: '@(TempData["Success"])',
            icon: 'success',
            confirmButtonText: 'OK'
        });

    </script>
}
else if (TempData["Error"] != null)
{
    <script>
        Swal.fire({
            title: '@(TempData["Error"])',
            icon: 'error',
            confirmButtonText: 'OK'
        });

    </script>
}

<h1 class="mb-5">Dashboard</h1>

@if(Model != null){
    <h5>Gender Percentage</h5>
    <div id="donutChart" style="width: 600px; height: 600px;"></div>

    <h5>Employees' birth month</h5>
    <div id="barChart"></div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
      crossorigin="anonymous"
    ></script>

    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
    <script>
        var donutOptions = {
            chart: {
                type: "donut",
            },
            series: [@(Model.GenderCount["Female"]), @(Model.GenderCount["Male"])],

            labels: ["Female", "Male"],
            plotOptions: {
                pie: {
                    donut: {
                        size: "20%",
                        labels: {
                            show: true,
                        },
                    },
                },
            },
        };

        var donutChart = new ApexCharts(document.querySelector("#donutChart"), donutOptions);

        donutChart.render();



        var barOptions = {
            series: [
                {
                    name: "employee count",
                    data: [@(Model.BirthMonthCount["January"]), @(Model.BirthMonthCount["February"]), @(Model.BirthMonthCount["March"]), @(Model.BirthMonthCount["April"]), @(Model.BirthMonthCount["May"]), @(Model.BirthMonthCount["June"]), @(Model.BirthMonthCount["July"]), @(Model.BirthMonthCount["August"]), @(Model.BirthMonthCount["September"]), @(Model.BirthMonthCount["October"]), @(Model.BirthMonthCount["November"]), @(Model.BirthMonthCount["December"])],
                },
            ],
            chart: {
                height: 350,
                type: "bar",
            },
            plotOptions: {
                bar: {
                    borderRadius: 10,
                    dataLabels: {
                        position: "top", // top, center, bottom
                    },
                },
            },
            dataLabels: {
                enabled: true,
                formatter: function (val) {
                    return val;
                },
                offsetY: 20,
                style: {
                    fontSize: "12px",
                    colors: ["#304758"],
                },
            },

            xaxis: {
                categories: [
                    "Jan",
                    "Feb",
                    "Mar",
                    "Apr",
                    "May",
                    "Jun",
                    "Jul",
                    "Aug",
                    "Sep",
                    "Oct",
                    "Nov",
                    "Dec",
                ],
                position: "top",
                axisBorder: {
                    show: false,
                },
                axisTicks: {
                    show: false,
                },
                crosshairs: {
                    fill: {
                        type: "gradient",
                        gradient: {
                            colorFrom: "#D8E3F0",
                            colorTo: "#BED1E6",
                            stops: [0, 100],
                            opacityFrom: 0.4,
                            opacityTo: 0.5,
                        },
                    },
                },
                tooltip: {
                    enabled: true,
                },
            },
            yaxis: {
                axisBorder: {
                    show: false,
                },
                axisTicks: {
                    show: false,
                },
                labels: {
                    show: false,
                    formatter: function (val) {
                        return val;
                    },
                },
            },
            title: {
                text: "count of employees' birth month",
                floating: true,
                offsetY: 330,
                align: "center",
                style: {
                    color: "#444",
                },
            },
        };

        let barChart = new ApexCharts(document.querySelector("#barChart"), barOptions);
        barChart.render();
    </script>
}